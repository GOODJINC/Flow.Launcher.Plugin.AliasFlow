<Window x:Class="Flow.Launcher.Plugin.AliasFlow.Views.KeywordEntryEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alias Entry"
        Width="720"
        Height="560"
        MinWidth="660"
        MinHeight="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,6,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Title -->
                    <RowDefinition Height="10"/>

                    <RowDefinition Height="Auto"/>  <!-- Description -->
                    <RowDefinition Height="10"/>

                    <RowDefinition Height="Auto"/>  <!-- Target -->
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>  <!-- Target hint -->
                    <RowDefinition Height="12"/>

                    <RowDefinition Height="Auto"/>  <!-- Hotkey -->
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>  <!-- Hotkey hint -->
                    <RowDefinition Height="12"/>

                    <RowDefinition Height="Auto"/>  <!-- Keywords -->
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>  <!-- Keywords hint -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Title"/>
                <TextBox x:Name="TitleBox" Grid.Row="0" Grid.Column="1" Height="30"
                         ToolTip="표시 이름 (예: 네이버, 카카오톡)"/>

                <!-- Description -->
                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Description"/>
                <TextBox x:Name="DescBox" Grid.Row="2" Grid.Column="1" Height="30"
                         ToolTip="설명(선택)"/>

                <!-- Target -->
                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Target"/>
                <TextBox x:Name="PathBox" Grid.Row="4" Grid.Column="1" Height="30"
                         ToolTip="URL 또는 실행 파일/폴더 경로. 환경 변수(%USERNAME% 등) 사용 가능."/>

                <TextBlock Grid.Row="6" Grid.Column="1" Opacity="0.75" TextWrapping="Wrap"
                           Text="예) https://naver.com   |   C:\Program Files\Kakao\KakaoTalk\KakaoTalk.exe   |   %LOCALAPPDATA%\Programs\Microsoft VS Code\Code.exe"/>

                <!-- Hotkey -->
                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Hotkey"/>
                <Grid Grid.Row="8" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="34"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="HotkeyBox" Grid.Column="0" Height="30"
                             VerticalContentAlignment="Center"
                             ToolTip="예: Ctrl+Shift+Space (단순 문자열 입력)"/>

                    <Button Grid.Column="2"
                            Content="✕"
                            ToolTip="Clear"
                            Click="HotkeyClearButton_Click"/>
                </Grid>

                <TextBlock Grid.Row="10" Grid.Column="1" Opacity="0.75" TextWrapping="Wrap"
                           Text="Hotkey는 실행 시 먼저 시도됩니다. (예: Ctrl+Shift+Space)   ※ 단축키 캡처가 아니라 문자열 입력 방식입니다."/>

                <!-- Keywords -->
                <TextBlock Grid.Row="12" Grid.Column="0" VerticalAlignment="Top" Text="Keywords"/>
                <TextBox x:Name="KeywordsBox"
                         Grid.Row="12" Grid.Column="1"
                         MinHeight="160"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         ToolTip="쉼표(,) 또는 줄바꿈으로 구분"/>

                <TextBlock Grid.Row="14" Grid.Column="1" Margin="0,6,0,0"
                           Opacity="0.75" TextWrapping="Wrap">
                    <Run Text="키워드는 쉼표 또는 줄바꿈으로 구분합니다. "/>
                    <Run Text="(초성 검색은 Title/Keywords에서 자동 지원) "/>
                    <Run Text="예) 네이버, naver, ㄴㅇㅂ"/>
                </TextBlock>
            </Grid>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Width="92" Height="32" Margin="0,0,8,0" Content="Cancel" IsCancel="True"/>
            <Button Width="92" Height="32" Content="Save" IsDefault="True" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
