<!-- Views/SettingsPanel.xaml -->
<UserControl x:Class="Flow.Launcher.Plugin.AliasFlow.Views.SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Keyword" Binding="{Binding Keyword}" Width="140"/>
                <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="*"/>
                <DataGridTextColumn Header="Args" Binding="{Binding Arguments}" Width="160"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="220"/>
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel Grid.Row="1" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Width="90" Margin="0,0,8,0" Content="Add" Click="Add_Click"/>
                <Button Width="90" Margin="0,0,8,0" Content="Edit" Click="Edit_Click"/>
                <Button Width="90" Content="Delete" Click="Delete_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Width="120" Margin="0,0,8,0" Content="Import JSON" Click="Import_Click"/>
                <Button Width="120" Content="Export JSON" Click="Export_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
