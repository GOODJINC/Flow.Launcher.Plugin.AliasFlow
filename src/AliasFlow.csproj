<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Flow.Launcher.Plugin 5.1.0은 .NET 9 타겟 필요 -->
    <TargetFramework>net9.0-windows7.0</TargetFramework>

    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- DLL 이름을 확정 (plugin.json ExecuteFileName과 일치시킴) -->
    <AssemblyName>Flow.Launcher.Plugin.AliasFlow</AssemblyName>
    <RootNamespace>Flow.Launcher.Plugin.AliasFlow</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Flow.Launcher.Plugin" Version="5.1.0" />
  </ItemGroup>

  <!-- JetBrains.Annotations.dll 이 산출물/릴리즈에 포함되지 않도록 (전이 의존성 포함) -->
  <ItemGroup>
    <PackageReference Update="JetBrains.Annotations" PrivateAssets="all" ExcludeAssets="runtime" />
  </ItemGroup>

</Project>
